<model>
    <parent>
        <artifactId>freehep-nar-plugin</artifactId>
        <groupId>org.freehep</groupId>
        <version>2.0-alpha-1-SNAPSHOT</version>
    </parent>
    
    <name>FreeHEP NAR Plugin Test</name>
    <description>Test for FreeHEP NAR plugin.</description>
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.freehep</groupId>
    <artifactId>freehep-nar-plugin-test</artifactId>
    <packaging>jar</packaging>
    <version>2.0-SNAPSHOT</version>

    <build>
        <plugins>            
            <plugin>
                <groupId>org.freehep</groupId>
                <artifactId>freehep-nar-plugin</artifactId>
                <version>2.0-alpha-1-SNAPSHOT</version>
                <executions>
                    <execution>
                        <id>NAR-Javah</id>
                        <goals>
                            <goal>javah</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>NAR-Compile</id>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                        <configuration>
                            <outType>jni</outType>
                            <cpp>
                                <debug>true</debug>
                                <sourceDirectory>src/main</sourceDirectory>
                                <includes>
                                    <include>**/*.cpp</include>
                                </includes>
                            </cpp>
                            <java>
                                <include>true</include>
                                <includePaths>
                                    <includePath>include</includePath>
                                    <includePath>include/win32</includePath>
                                </includePaths>
                                <link>true</link>
                                <runtime>jvm</runtime>
                                <runtimeDirectory>lib</runtimeDirectory>
                            </java>
                            <linker>
                                <options>
                                    <option>/verbose</option>
                                </options>
                                <sysLibs>
                                    <sysLib>
                                        <name>WS2_32</name>
                                        <type>shared</type>
                                    </sysLib>
                                </sysLibs>
                            </linker>
                        </configuration>
                    </execution>
                </executions>
            </plugin>            
        </plugins>
    </build>    
    
</model>
